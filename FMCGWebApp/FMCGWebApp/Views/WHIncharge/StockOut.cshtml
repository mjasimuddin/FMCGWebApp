@model FMCGWebApp.Models.Stockout

@{
    ViewBag.Title = "StockOut";
    Layout = "~/Views/Shared/_LayoutWhIncharge.cshtml";
}

<h2>StockOut</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Stockout</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <div class="col-md-12">
                <label id="ShowShopId" class="control-label"></label>
                <select name="Id" id="Id" class="form-control">
                    <option value="">--Select Ordered No.--</option>
                    @foreach (var order in ViewBag.order)
                    {
                        <option value="@order.Id">@order.Id</option>
                    }
                </select>
                @Html.ValidationMessageFor(model => model.Id, "", new { @class = "text-danger" })
            </div>
        </div>
        
        <div class="form-group">
            <div class="col-md-12">
                <input type="text" name="" id="" class="form-control" readonly="readonly" placeholder="" />
            </div>
        </div>
        
        <div class="form-group">
            <div class="col-md-12">
                <input type="text" name="" id="" class="form-control" readonly="readonly" placeholder="" />
            </div>
        </div>
        
        <div class="form-group">
            <div class="col-md-12">
                <input type="text" name="" id="" class="form-control" readonly="readonly" placeholder="" />
            </div>
        </div>
        
        <div class="form-group">
            <div class="col-md-12">
                <input type="text" name="" id="" class="form-control" readonly="readonly" placeholder="" />
            </div>
        </div>
        
        <div class="form-group">
            <div class="col-md-12">
                <input type="text" name="" id="" class="form-control" readonly="readonly" placeholder=""/>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-4">
                <input type="submit" value="Reject" class="btn btn-default" />
          
                <input type="submit" value="Confirm" class="btn btn-default" />
            </div>
        </div>
    </div>
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
